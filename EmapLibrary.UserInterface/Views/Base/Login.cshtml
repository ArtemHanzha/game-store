@model EmapLibrary.UserInterface.ViewModels.Internal.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div id="main_part_inner">
    <div id="main_part_inner_in">
        
        <h2>Sign in</h2>
                        
    </div>
            
</div>
        
        
<!-- *********  Content  ********** -->
        
<div id="content_inner">
            
    <!-- *** contact form *** -->
            
    <h3>Sign in</h3>
           @{
               if (Model.IsLoginIncorrect)
               {
                   <span>Login or password incorrect</span>
               }
           }
    <form action="Login" method="post" class="formit">
        <label for="login" >Login</label>
        <input type="text" name="login" value="@Model.Login" placeholder="LOGIN"/>
        <label for="password">Password</label>
        <input type="text" name="password" value="@Model.Password" placeholder="PASSWORD"/>
        <input type="submit" class="button_submit" value="SIGN IN">
    </form>

    <div class="cara"></div>
    <p class="reg-help">Don't have account? @Html.ActionLink("Registration", "Registration", "User") </p>
    <div class="cara"></div>
            
</div>
